	        						public void mouseExited(java.awt.event.MouseEvent e) {
	        							//saiu
	        							lp.remove(btnExcluir);
	        							lp.remove(btnEditar);
	        					        lp.revalidate();
	        					        lp.repaint();
	        						}
	        			        });
	        			 }
	        			 
	        			 yAtvD1+=60;
	        			 
	        		}else if(contador==1) {
	        			int yAtvD1=300;
	        			 lblAtividades1 = new JLabel[atvd.size()];
	        			 int indiceAtv =0;
	        			 
