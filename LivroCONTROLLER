import vo.Livro;

public class LivroCONTROLLER {

	public void cadastrar(int isbn, String titulo, String editora, String autor, Date dataPublicacao,
	String emailProf) {
		LivroBO bo = new LivroBO();
		bo.cadastrar(isbn, titulo, editora, autor, dataPublicacao, emailProf);
	}
	
	public boolean consultar(int isbn) {
		LivroBO bo = new LivroBO();
		return bo.consultar(isbn);
	}
}
