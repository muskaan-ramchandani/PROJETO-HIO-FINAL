importar java.awt.event.ActionListener;

classe pública Tela_Inicial_Prof estende JFrame{

	painel de conteúdo do contêiner privado;
	privada JLabel LivrosR;
	vídeos JLabel privadosR;
	privado JLabel Pesquisa;
	privado JLabel OlimpR;
	privado JLabel PesquisaIm;
	Barra JToolBar privada;
	privado JButton Livros;
	vídeos JButton privados;
	private JTextField PesOlimpiadas;

	public Tela_Inicial_Prof() {
		inicializarComponentes();
		//definirEventos();
	}

	private void inicializarComponentes() {
		Kit de ferramentas kit de ferramentas = Toolkit.getDefaultToolkit();
		Dimensão screenSize = toolkit.getScreenSize();
		setBounds(0, 0, screenSize.width, screenSize.height-40);
        contentPane=getContentPane();
        contentPane.setBackground(Color.branco);
        setLayout(nulo);

        LivrosR = new JLabel("<html>Livros postados<br> recentemente");        
        VídeosR = new JLabel("<html>Vídeos postados<br> recentemente");  
        OlimpR = new JLabel("<html>Olimpiadas acessadas <br> anteriomente");
        PesquisaIm = new JLabel(new ImageIcon("C:\\Breno\\lupa.png"));
        Barra = new JToolBar();
        Livros = new JButton("Livros");
        Vídeos = new JButton("Vídeos");
        PesOlimpiadas = new JTextField("Pesquisa Olimpíadas");


        PesOlimpiadas.setBorder( new BordaCantoArredondado() );

        Cor roxoEscuro=nova Cor(75,0,130);
        LivrosR.setForeground(Color.preto);
        VídeosR.setForeground(Color.black);
        OlimpR.setForeground(Color.preto);


        Fonte fonteLabelsDesc = new Font( "Trebuchet MS", Font.PLAIN, 35);
        LivrosR.setFont(fonteLabelsDesc);
        VídeosR.setFont(fonteLabelsDesc);
        OlimpR.setFont(fonteLabelsDesc);
        PesOlimpiadas.setFont(fonteLabelsDesc);


        LivrosR.setBounds(200,-20.400.300);
        VídeosR.setBounds(200.250.400.300);
        OlimpR.setBounds(950.50.400.300);
        PesquisaIm.setBounds(500,-210,(screenSize.width/2)-130, screenSize.height-200);
        PesOlimpiadas.setBounds(880.100.550,50);


        add(LivrosR);
        add(VídeosR);
        add(OlimpR);
        add(PesquisaIm);
        add(PesOlimpiadas);
        Barra.add(Livros);
        Barra.add(Vídeos);
        add(Barra, BorderLayout.NORTH);

		this.setVisible(verdadeiro);
	}
	public static void abrir() {
		Quadro Tela_Inicial_Prof = new Tela_Inicial_Prof();
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Dimensão tela = Toolkit.getDefaultToolkit().getScreenSize();
        frame.setLocation((tela.width - frame.getSize().width)/2,(tela.height - frame.getSize().height)/2);
        frame.setVisible (verdadeiro);
    }

    public static void main(String[] args) {
        abrir();
    }

classe privada BordaCantoArredondado estende AbstractBorder {

        private static final BasicStroke CONTORNO = new BasicStroke( 2 );

        @Sobrepor
        public void paintBorder(Componente c, Gráficos g, int x, int y, int largura, int altura) {

            super.paintBorder(c, g, x, y, largura, altura);

            Gráficos2D g2d = (Gráficos2D) g.create();
            g2d.setRenderingHint( RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON );
            g2d.setStroke( CONTORNO );

            g2d.setColor(Color.BLACK);
            g2d.drawRoundRect(x, y, largura-1, altura-1, 20, 20);

            g2d.dispose();

        }

    }


}
